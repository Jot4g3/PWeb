<%- include('partials/header.ejs') %>

<div class="container mt-5 mb-5">
  <div class="card">
    <div class="card-header">
      <h2>Cadastro de Novo Livro</h2>
    </div>
    <div class="card-body">
      <form action="/books" method="POST">

        <div class="mb-3">
          <label for="title" class="form-label">Título do Livro:</label>
          <input type="text" class="form-control" id="titulo" name="title" placeholder="Ex: O Senhor dos Anéis" required>
        </div>

        <div class="mb-3">
          <label for="author" class="form-label">Autor:</label>
          <input type="text" class="form-control" id="autor" name="author" placeholder="Ex: J.R.R. Tolkien" required>
        </div>

        <div class="mb-3">
          <label for="bookpublisher" class="form-label">Editora:</label>
          <input type="text" class="form-control" id="editora" name="bookpublisher" placeholder="Ex: HarperCollins" required>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="year" class="form-label">Ano de Publicação:</label>
            <input type="number" class="form-control" id="ano" name="year" placeholder="Ex: 1954" required min="0">
          </div>
          <div class="col-md-4 mb-3">
            <label for="quantity" class="form-label">Quantidade em Estoque:</label>
            <input type="number" class="form-control" id="quant" name="quantity" placeholder="Ex: 15" required min="0">
          </div>
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label">Preço (R$):</label>
            <input type="number" class="form-control" id="preco" name="price" placeholder="Ex: 45.90" step="0.01" required min="0">
          </div>
        </div>

        <hr>

        <button type="submit" class="btn btn-primary">Cadastrar Livro</button>
        <a href="/" class="btn btn-secondary">Cancelar</a>

      </form>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %>