<%- include('partials/header.ejs') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2>Cadastrar Nova Biblioteca</h2>
                    </div>
                    <div class="card-body">
                        <form action="/libraries/create" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Nome da Biblioteca:</label>
                                <input type="text" class="form-control" name="name" required>
                            </div>

                            <h5 class="mt-4">Endereço</h5>
                            <div class="row">
                                <div class="col-md-9 mb-3">
                                    <label for="street" class="form-label">Rua e Número:</label>
                                    <input type="text" class="form-control" name="street" required>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="zipCode" class="form-label">CEP:</label>
                                    <input type="text" class="form-control" name="zipCode" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="city" class="form-label">Cidade:</label>
                                    <input type="text" class="form-control" name="city" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="state" class="form-label">Estado (UF):</label>
                                    <input type="text" class="form-control" name="state" required maxlength="2">
                                </div>
                            </div>

                            <h5 class="mt-4">Informações Adicionais</h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="phoneNumber" class="form-label">Telefone:</label>
                                    <input type="tel" class="form-control" name="phoneNumber">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="website" class="form-label">Website:</label>
                                    <input type="url" class="form-control" name="website">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="openingHours" class="form-label">Horário de Funcionamento:</label>
                                <input type="text" class="form-control" name="openingHours"
                                    placeholder="Ex: Seg-Sex: 9h às 18h">
                            </div>

                            <hr>
                            <button type="submit" class="btn btn-primary">Cadastrar Biblioteca</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('partials/footer.ejs') %>